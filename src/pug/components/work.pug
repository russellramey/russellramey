include ../data/projects.pug

#work
    .container.content-section
        h2 Featured work
        
    ul.projects
        each project in projects
            li.project-item
                
                .project-item-thumbnail
                    a.project-more(href="redirect.php/?title=" + project.title + "&url=" + project.link + "" target="_blank")
                        //-img(src="images/work/" + project.thumb + "" width="auto" height="auto")
                        if project.thumb.desktop
                            .thumbnail-desktop
                                img(src="images/desktop-container.svg" width="auto" height="auto")
                                span.screenshot(style="background-image:url(../images/work/" + project.thumb.desktop + ")")
                        if project.thumb.mobile
                            .thumbnail-mobile
                                img(src="images/mobile-container.svg" width="auto" height="auto")
                                span.screenshot(style="background-image:url(../images/work/" + project.thumb.mobile + ")")
                .project-item-details
                    h3.project-title= project.title
                    p.project-stack= project.stack
                    p.project-desc= project.desc.main + ' '
                        span= project.desc.more
                    p    
                        a.project-link.button(href="redirect.php/?title=" + project.title + "&url=" + project.link + "" target="_blank") View this site #[span &raquo;]
                        a.project-more(href="#") View details
                    
                .project-item-features
                    ul
                        each feature in project.features
                            li= feature
